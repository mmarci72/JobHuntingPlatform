# ===============================================================================================================================
# EditorConfig helps us keep consistent coding styles between different editors and IDEs (http://editorconfig.org).
#
#
# NOTE: For projects using NPM it is suggested to use NPM 5, which does not force indentation with spaces in 'package.json'.
# ===============================================================================================================================

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 130

[*.json]
max_line_length = 9999

[*.{yaml,yml}]
indent_style = space
indent_size = 2
tab_width = 2